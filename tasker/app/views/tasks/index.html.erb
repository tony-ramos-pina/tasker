<p id="notice"><%= notice %></p>

<h1>Tasks</h1>


<h1>Tasks To Do</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Lasteditdate</th>
      <th>Isdone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @undone_tasks.each do |task| %>
      <tr>
        <td><%= task.user_id %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.lastEditDate %></td>
        <td><%= task.isDone %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to '', setAsDone_task_path(task), class: "btn-done fas fa-check" %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<h1>Done Tasks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Lasteditdate</th>
      <th>Isdone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @done_tasks.each do |task| %>
      <tr>
        <td><%= task.user_id %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.lastEditDate %></td>
        <td><%= task.isDone %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to '', setAsNotDone_task_path(task), class: "btn-undone fas fa-times" %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



